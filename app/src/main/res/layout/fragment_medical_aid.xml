<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Medical_account"
    android:background="@drawable/rounded_buttons"
    android:layout_margin="10dp"
    android:columnCount="1"
    android:rowCount="4"
    android:textAlignment="center"
    android:paddingLeft="5dp">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_gravity="fill"
        android:textSize="20sp"
        android:layout_columnWeight="0.3"
        android:layout_rowWeight="0.2"
        android:gravity="center"
        android:textColor="#ffffff"
        android:text="Fund"
        android:textAlignment="center"/>

    <Spinner
        android:layout_gravity="fill"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:layout_columnWeight="0.7"
        android:layout_rowWeight="0.2"
        android:gravity="center"
        android:id="@+id/medicalAidFund"/>
    <TextView
        android:layout_gravity="fill"
        android:layout_columnWeight="0.3"
        android:layout_rowWeight="0.5"
        android:textSize="20sp"
        android:textColor="#ffffff"

        android:gravity="center"
        android:text="Member Number"
        android:textAlignment="center"/>

    <EditText
        android:layout_gravity="fill"
        android:layout_columnWeight="1.7"
        android:layout_rowWeight="0.5"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="#ffffff"
        android:inputType="phone"
        android:id="@+id/medicalAidNumber"/>

    <TextView
        android:layout_gravity="fill"
        android:layout_columnWeight="0.3"
        android:layout_rowWeight="0.5"
        android:textSize="20sp"
        android:textColor="#ffffff"

        android:gravity="center"
        android:text="Member Name"
        android:textAlignment="center"/>

    <EditText
        android:layout_gravity="fill"
        android:layout_columnWeight="1.7"
        android:layout_rowWeight="0.5"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="#ffffff"
        android:inputType="text"
        android:id="@+id/memberName"/>


    <TextView
        android:layout_gravity="fill"
        android:layout_columnWeight="0.3"
        android:layout_rowWeight="0.5"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:gravity="center"
        android:text="Option Plan"
        android:textAlignment="center"/>

    <Spinner
        android:layout_gravity="fill"
        android:layout_columnWeight="1.7"
        android:layout_rowWeight="0.5"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="#ffffff"
        android:inputType="number"
        android:id="@+id/medicalAidOptionPlan"/>





</GridLayout>